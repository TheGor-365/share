<div id="<%= dom_id post %>" class="card col-6 p-5 rounded" data-controller="share" data-share-url-value="<%= post_url(post) %>">
  <p>
    <strong>Title:</strong>
    <%= content_tag(:p, post.title, data: { share_target: "title" }) %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= content_tag(:div, post.body, data: { share_target: "body" }) %>
  </p>

  <%= button_to "Share", "", data: { action: "click->share#share" } %>
  <p>
    <%= content_tag(:p, "", class: "result", data: { share_target: "result" }) %>
  </p>
</div>
